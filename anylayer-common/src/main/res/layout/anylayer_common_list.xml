<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="32dp"
    android:background="@drawable/anylayer_common_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/anylayer_common_list_tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/anylayer_common_text_title"
        android:textSize="@dimen/anylayer_common_text_title"
        tools:text="提示" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/anylayer_common_list_rv"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/anylayer_common_round_radius"
        android:paddingBottom="@dimen/anylayer_common_round_radius"
        android:clipToPadding="false"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:itemCount="5"
        tools:listitem="@layout/anylayer_common_list_rv_item"/>

    <View
        android:id="@+id/anylayer_common_list_v_line_h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/anylayer_common_line"/>

    <LinearLayout
        android:id="@+id/anylayer_common_list_ll_yes_no"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/anylayer_common_list_tv_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="取消"
            android:textColor="@color/anylayer_common_text_btn_no"
            android:textSize="@dimen/anylayer_common_text_content" />

        <View
            android:id="@+id/anylayer_common_list_v_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/anylayer_common_line"/>

        <TextView
            android:id="@+id/anylayer_common_list_tv_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="确定"
            android:textColor="@color/anylayer_common_text_btn_yes"
            android:textSize="@dimen/anylayer_common_text_content" />

    </LinearLayout>

</LinearLayout>